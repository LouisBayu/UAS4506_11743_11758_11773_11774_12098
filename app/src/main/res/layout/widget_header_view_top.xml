<?xml version="1.0" encoding="utf-8"?>
<com.udinus.uas4506_11743_11758_11773_11774_12098.View.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/namaResep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/header_view_end_text_size"
        android:fontFamily="@font/raleway_bold"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="16sp"/>

</com.udinus.uas4506_11743_11758_11773_11774_12098.View.HeaderView>