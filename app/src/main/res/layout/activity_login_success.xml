<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginSuccess"
    android:background="@color/bg"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textBerhasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/raleway_extrabold"
        android:gravity="center"
        android:text="Login Berhasil"
        android:textColor="@color/orangeTextHeading"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageSuccess"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/login_success"
        app:layout_constraintTop_toBottomOf="@id/textBerhasil"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:text="@string/desc_success_login"
        android:textColor="@color/orangeButton"
        android:textSize="19sp"
        android:letterSpacing="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSuccess"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Happy Cooking!"
        android:textColor="@color/orangeTextHeading"
        android:textSize="22sp"
        android:letterSpacing="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDesc"/>


</androidx.constraintlayout.widget.ConstraintLayout>