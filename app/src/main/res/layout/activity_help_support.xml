<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.HelpSupport"
    android:background="@color/bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/orangeTextHeading"
            android:textSize="20sp"
            android:text="Help &amp; Support"
            app:layout_constraintStart_toStartOf="@+id/back_btn"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/title_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/orangeTextHeading"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:text="Resep Dapurku">
                </TextView>

                <TextView
                    android:id="@+id/descApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_apps"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/raleway_medium"
                    android:justificationMode="inter_word"
                    android:text="@string/aboutApp"
                    android:textColor="@color/brownText"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descApp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center_horizontal"
                    android:text="Credit :"
                    android:textColor="@color/orangeTextHeading"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="3"
                android:columnOrderPreserved="false">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_noval"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="190dp"
                            android:layout_height="220dp"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="25dp"
                            android:src="@drawable/noval">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/orangeTextHeading"
                            android:textSize="18sp"
                            android:gravity="center_horizontal"
                            android:text="Noval Kristian\nA11.2019.11743">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_arsya"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="190dp"
                            android:layout_height="220dp"
                            android:src="@drawable/arsya"
                            app:riv_corner_radius="25dp"
                            android:scaleType="centerCrop">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/orangeTextHeading"
                            android:textSize="18sp"
                            android:gravity="center_horizontal"
                            android:text="Arsya Pristhi\nA11.2019.11758">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_dion"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="190dp"
                            android:layout_height="220dp"
                            android:src="@drawable/dion"
                            app:riv_corner_radius="25dp"
                            android:scaleType="centerCrop">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/orangeTextHeading"
                            android:textSize="18sp"
                            android:gravity="center_horizontal"
                            android:text="Louis Bayu\nA11.2019.11773">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_khakim"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="190dp"
                            android:layout_height="220dp"
                            android:src="@drawable/khakim"
                            app:riv_corner_radius="25dp"
                            android:scaleType="centerCrop">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/orangeTextHeading"
                            android:textSize="18sp"
                            android:gravity="center_horizontal"
                            android:text="Luthfi Khakim\nA11.2019.11774">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                //Akbar
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_akbar"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="190dp"
                            android:layout_height="220dp"
                            android:src="@drawable/akbar"
                            app:riv_corner_radius="25dp"
                            android:scaleType="centerCrop">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/raleway_bold"
                            android:textColor="@color/orangeTextHeading"
                            android:textSize="18sp"
                            android:gravity="center_horizontal"
                            android:text="Akbar Fahriyan\nA11.2019.12098">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>