<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/edtLangkah"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/addinput"
        android:textColorHint="@color/orangeButton"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/orangeButton"
        android:textSize="15sp"
        android:hint="Input langkah"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:drawablePadding="20dp"
        android:layout_marginBottom="15dp"
        android:inputType="textMultiLine"/>
    <ImageView
        android:id="@+id/ivRemoveLangkah"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:tint="@color/orangeTextHeading"
        android:src="@drawable/ic_close"
        android:layout_gravity="center_vertical"/>

</LinearLayout>