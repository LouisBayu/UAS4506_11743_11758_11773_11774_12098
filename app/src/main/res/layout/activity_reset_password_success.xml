<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ResetPasswordSuccess"
    android:background="@color/bg"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:fontFamily="@font/raleway_extrabold"
        android:gravity="center"
        android:text="Password"
        android:textColor="@color/orangeTextHeading"
        android:textSize="35sp"
        android:letterSpacing="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textBerhasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_extrabold"
        android:gravity="center"
        android:text="Berhasil Diganti"
        android:textColor="@color/orangeTextHeading"
        android:textSize="35sp"
        android:letterSpacing="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPassword"/>

    <ImageView
        android:id="@+id/imageSuccess"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/change_success"
        app:layout_constraintTop_toBottomOf="@id/textBerhasil"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:text="@string/desc_success_change"
        android:textColor="@color/orangeButton"
        android:textSize="19sp"
        android:letterSpacing="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSuccess"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="10dp"
        android:text="Login"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_bold"
        android:textSize="17sp"
        android:onClick="onClickLogin"/>

</LinearLayout>