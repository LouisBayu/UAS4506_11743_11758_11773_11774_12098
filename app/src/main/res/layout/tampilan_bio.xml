<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="@color/bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:backgroundTint="#ffe3be">

        <ImageView
            android:id="@+id/imgBio"
            android:layout_width="150dp"
            android:layout_height="202dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@color/black"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="25dp"
            android:text="Nama"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/orangeTextHeading"/>
        <TextView
            android:id="@+id/textNama"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="45dp"
            android:text="nama" />

        <TextView
            android:id="@+id/txtNim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="85dp"
            android:text="NIM"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/orangeTextHeading"/>
        <TextView
            android:id="@+id/textNim"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="105dp"
            android:text="NIM"/>

        <TextView
            android:id="@+id/txtKelompok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="145dp"
            android:text="Kelompok"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/orangeTextHeading"/>
        <TextView
            android:id="@+id/textKelompok"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="165dp"
            android:text="kelompok"/>

    </androidx.cardview.widget.CardView>




</LinearLayout>