<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/custom_input_outline_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="fontTab" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>